{
    "name": "webapp1",
    "description": "Demo webapp that uses the Jade engine for rendering",
    "license": "MIT",
    "version": "1.0.0",
    "files": [
        "dist/**",
        "views/**",
        "public/**"
    ],
    "dependencies": {
        "jade": "^1.11.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.16.8",
        "eslint": "^8.6.0",
        "sass": "^1.47.0",
        "jest": "^27.4.7",
        "nodemon": "^2.0.15",
        "express-session": "^1.17.2",
        "typescript": "^4.5.4",
        "@types/express-session": "^1.17.4",
        "express": "^4.17.2"
    },
    "scripts": {
        "lint": "eslint --fix src",
        "type-check": "tsc --noEmit",
        "build": "babel --extensions .js,.ts src/js -d dist && sass --style=compressed src/sass/index.scss > public/style.css ",
        "start": "node dist/server.js",
        "dev": "nodemon --watch src --exec \"npm run build && npm run start\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Webapp 1",
                "type": "web-app",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "requires": [
                    "Mashroom Session Middleware"
                ],
                "defaultConfig": {
                    "path": "/webapp1"
                }
            }
        ]
    }
}
