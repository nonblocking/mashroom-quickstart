{
    "name": "webapp1",
    "description": "Demo webapp that uses the Jade engine for rendering",
    "license": "MIT",
    "version": "1.0.0",
    "files": [
        "dist/**",
        "views/**",
        "public/**"
    ],
    "dependencies": {
        "express": "^4.17.1",
        "jade": "^1.11.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.1",
        "eslint": "^7.13.0",
        "node-sass": "^5.0.0",
        "jest": "^26.6.3",
        "nodemon": "^2.0.6",
        "express-session": "^1.17.1",
        "typescript": "^4.0.5",
        "@types/express-session": "^1.17.1"
    },
    "scripts": {
        "lint": "eslint --fix src",
        "type-check": "tsc --noEmit",
        "build": "babel --extensions .js,.ts src/js -d dist && node-sass --output-style compressed src/sass/index.scss > public/style.css ",
        "start": "node dist/server.js",
        "dev": "nodemon --watch src --exec \"npm run build && npm run start\""
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Webapp 1",
                "type": "web-app",
                "bootstrap": "./dist/mashroom-bootstrap.js",
                "requires": [
                    "Mashroom Session Middleware"
                ],
                "defaultConfig": {
                    "path": "/webapp1"
                }
            }
        ]
    }
}
