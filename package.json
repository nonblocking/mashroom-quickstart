{
    "name": "@mashroom/mashroom-quickstart",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": ">=8.0.0"
    },
    "dependencies": {
        "@mashroom/mashroom": "^1.2.2",
        "@mashroom/mashroom-docs-static": "^1.2.2",
        "@mashroom/mashroom-browser-cache": "^1.2.2",
        "@mashroom/mashroom-csrf-protection": "^1.2.2",
        "@mashroom/mashroom-helmet": "^1.2.2",
        "@mashroom/mashroom-i18n": "^1.2.2",
        "@mashroom/mashroom-security": "^1.2.2",
        "@mashroom/mashroom-security-default-login-webapp": "^1.2.2",
        "@mashroom/mashroom-security-provider-simple": "^1.2.2",
        "@mashroom/mashroom-session": "^1.2.2",
        "@mashroom/mashroom-session-provider-filestore": "^1.2.2",
        "@mashroom/mashroom-storage": "^1.2.2",
        "@mashroom/mashroom-storage-provider-filestore": "^1.2.2",
        "lerna": "^3.18.4"
    },
    "devDependencies": {
        "@babel/core": "^7.7.2",
        "@babel/preset-env": "^7.7.1",
        "@babel/preset-flow": "^7.0.0",
        "babel-eslint": "^10.0.3",
        "eslint": "^6.6.0",
        "eslint-plugin-flowtype": "^4.4.1",
        "eslint-plugin-jest": "^23.0.4",
        "eslint-plugin-json": "^2.0.1",
        "flow-bin": "0.109.0"
    },
    "scripts": {
        "setup": "npm install && lerna bootstrap --no-ci",
        "setup-production": "npm install --production && NODE_ENV=production lerna bootstrap --no-ci",
        "flow": "flow check",
        "lint:config": "eslint --ext .js,.json --fix ./config",
        "lint": "lerna run lint && npm run lint:config",
        "build": "npm run flow && npm run lint && lerna run build",
        "start": "node ./mashroom-starter",
        "docker:create-image": "npm run setup && npm run build && docker build -t mashroom-quickstart .",
        "docker:start": "docker run -e NODE_ENV=production -p 6060:6060 mashroom-quickstart "
    }
}
