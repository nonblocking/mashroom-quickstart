{
    "name": "@mashroom/mashroom-quickstart",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": ">=12"
    },
    "dependencies": {
        "@mashroom/mashroom": "^1.8.1",
        "@mashroom/mashroom-docs-static": "^1.8.1",
        "@mashroom/mashroom-browser-cache": "^1.8.1",
        "@mashroom/mashroom-csrf-protection": "^1.8.1",
        "@mashroom/mashroom-helmet": "^1.8.1",
        "@mashroom/mashroom-i18n": "^1.8.1",
        "@mashroom/mashroom-error-pages": "^1.8.1",
        "@mashroom/mashroom-security": "^1.8.1",
        "@mashroom/mashroom-security-default-login-webapp": "^1.8.1",
        "@mashroom/mashroom-security-provider-simple": "^1.8.1",
        "@mashroom/mashroom-session": "^1.8.1",
        "@mashroom/mashroom-session-provider-filestore": "^1.8.1",
        "@mashroom/mashroom-storage": "^1.8.1",
        "@mashroom/mashroom-storage-provider-filestore": "^1.8.1",
        "lerna": "^4.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@babel/preset-typescript": "^7.15.0",
        "eslint": "^7.32.0",
        "eslint-plugin-jest": "^24.4.0",
        "eslint-plugin-json": "^3.1.0",
        "@typescript-eslint/parser": "4.29.1",
        "@typescript-eslint/eslint-plugin": "4.29.1",
        "typescript": "^4.3.5",
        "@types/jest": "^26.0.24",
        "@types/express": "^4.17.13"
    },
    "scripts": {
        "setup": "npm install && lerna bootstrap --no-ci",
        "setup-production": "npm ci --production && NODE_ENV=production lerna bootstrap --ci",
        "type-check": "lerna run type-check",
        "lint:config": "eslint --ext .js,.json --fix ./config",
        "lint": "lerna run lint && npm run lint:config",
        "build": "npm run type-check && npm run lint && lerna run build",
        "start": "node ./mashroom-starter",
        "docker:create-image": "npm run setup && npm run build && docker build -t mashroom-quickstart .",
        "docker:start": "docker run -e NODE_ENV=production -p 6060:6060 mashroom-quickstart "
    }
}
