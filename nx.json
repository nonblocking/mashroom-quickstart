{
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": [
                    "test",
                    "build",
                    "lint",
                    "type-check"
                ]
            }
        }
    },
    "targetDefaults": {
        "build": {
            "outputs": [
                "{projectRoot}/dist",
                "{projectRoot}/lib",
                "{projectRoot}/public"
            ]
        },
        "test": {
            "outputs": [
                "{projectRoot}/tmp",
                "{projectRoot}/log"
            ]
        }
    }
}
